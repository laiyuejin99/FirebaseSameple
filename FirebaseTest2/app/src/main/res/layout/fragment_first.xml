<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/btn_add_docs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit random error"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/btn_update_docs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update doc"
        app:layout_constraintTop_toBottomOf = "@+id/btn_add_docs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_counter_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="counter add"
        app:layout_constraintTop_toBottomOf = "@+id/btn_update_docs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sample query"
        app:layout_constraintTop_toBottomOf = "@+id/btn_counter_added"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>